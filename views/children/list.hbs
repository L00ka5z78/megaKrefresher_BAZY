<h2>Children LIST</h2>
<ul>
  {{#each childrenList}}
    <li>
      <label>
        {{this.name}}
        <select>
          <option value=''>Empty</option>
          {{#each ../giftsList}}
            <option value='{{this.name}}'>{{this.name}}</option>
          {{/each}}
        </select>
      </label>
      <button>Save</button>
    </li>
  {{/each}}
</ul>
<h2>Add child to Santa's list</h2>
<form action=''>
  <label>
    Name:
    <input name='name' type='text' />
  </label>
  <button>Add</button>

</form>