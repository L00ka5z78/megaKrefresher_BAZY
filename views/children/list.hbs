<h2>Children List</h2>
<ul>
  {{#each childrenList}}
    <div>
      <form action="/child/gift/{{this.id}}?_method=PATCH" method="POST">
      <label>
        {{this.name}}
        <select name="giftId">
          <option value=''>Empty</option>
          {{#each ../giftsList}}
            <option value='{{this.id}}' {{#if (equals this.id ../giftId)}}selected="selected"{{/if}}>{{this.name}}</option>
          {{/each}}
        </select>
      </label>
      <button>Save</button>
       {{this.desc}}
    </form>  
    </div>
  {{/each}}
</ul>
<h2>Add child to Santa's list</h2>
<form class="form" action='/child' method="POST">
  <label>
    Name: 
    <input name='name' type='text' />
  </label>
    <label>
    Description: 
    <input name='desc' type='text' />
  </label>
  <button class="btn">Add</button>

</form>
